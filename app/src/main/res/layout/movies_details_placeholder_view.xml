<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View android:layout_width="match_parent"
          android:layout_height="235dp"
          android:id="@+id/poster"
          android:background="@color/colorGray"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/name"
          android:layout_marginTop="15dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/poster"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toRightOf="parent"/>

    <View android:layout_width="0dp"
          android:layout_height="100dp"
          android:id="@+id/overview"
          android:layout_marginTop="15dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/name"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toRightOf="parent"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/genreslabel"
          android:layout_marginTop="20dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/overview"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/genres"
          android:layout_marginTop="10dp"
          android:background="@color/colorGray"
          android:layout_marginRight="40dp"
          app:layout_constraintTop_toBottomOf="@id/genreslabel"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/release"
          android:layout_marginTop="20dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/genres"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/date"
          android:layout_marginTop="10dp"
          android:background="@color/colorGray"
          android:layout_marginRight="40dp"
          app:layout_constraintTop_toBottomOf="@id/release"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/votelabel"
          android:layout_marginTop="20dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/date"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/vote"
          android:layout_marginTop="10dp"
          android:background="@color/colorGray"
          android:layout_marginRight="40dp"
          app:layout_constraintTop_toBottomOf="@id/votelabel"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/total"
          android:layout_marginTop="20dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/vote"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/totalvote"
          android:layout_marginTop="10dp"
          android:background="@color/colorGray"
          android:layout_marginRight="40dp"
          app:layout_constraintTop_toBottomOf="@id/total"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="25dp"
          android:id="@+id/popularitylabel"
          android:layout_marginTop="20dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toBottomOf="@id/totalvote"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/popularity"
          android:layout_marginTop="10dp"
          android:background="@color/colorGray"
          android:layout_marginRight="40dp"
          app:layout_constraintTop_toBottomOf="@id/popularitylabel"
          app:layout_constraintLeft_toLeftOf="@id/poster"
          app:layout_constraintRight_toLeftOf="@id/guideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.75"/>

</androidx.constraintlayout.widget.ConstraintLayout>