<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp">

    <View android:layout_width="90dp"
          android:layout_height="115dp"
          android:id="@+id/view_img"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/view_title"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:layout_constraintTop_toTopOf="@id/view_img"
          app:layout_constraintLeft_toRightOf="@id/view_img"
          app:layout_constraintRight_toRightOf="parent"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/view_date"
          app:layout_constraintTop_toBottomOf="@id/view_title"
          app:layout_constraintLeft_toLeftOf="@id/view_title"
          app:layout_constraintRight_toRightOf="@id/view_title"
          app:layout_constraintBottom_toTopOf="@id/view_vote"/>

    <View android:layout_width="0dp"
          android:layout_height="20dp"
          android:id="@+id/view_vote"
          app:layout_constraintLeft_toLeftOf="@id/view_date"
          app:layout_constraintRight_toRightOf="@id/view_date"
          app:layout_constraintBottom_toBottomOf="@id/view_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>